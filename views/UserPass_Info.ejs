<html style="font-size: 16px;" lang="en" class="u-responsive-xs">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
      body {
          margin: 20px;
      }

      table {
          border-collapse: collapse;
          border: solid 2px gray;
      }

      td,
      th {
          padding: 5px;
      }

      th {
          background-color: #cde;
      }
  </style>
  <script>
      function deleteUser(id) {
          if (confirm('ยืนยันการลบ')) {
              location.href = '/delete/' + id
          }
      }
  </script>
</head>
<body >

      <h4>Username & Password Information</h4>
          <table border ="1">
          <tr><th>Edit/Delete</th><th>ID</th><th>Date</th><th>Title</th><th>First Name</th><th>Last Name</th><th>Gentle</th><th>Phone Number</th><th>Email</th><th>Username</th><th>Password</th></tr>
          <% if (locals.get_data) { %>
          <% for (key of get_data) {  
            let dt=new Date(Date.parse(key.Date)) 
            let df=`${dt.getDate()}-${dt.getMonth() + 1}-${dt.getFullYear()}`
          %>
              <tr>
                 <td>
                    <a href="/edit/<%= key.ID %>">Edit</a> |
                    <a href="javascript: deleteUser('<%= key.ID %>')">Delete</a>
                  </td>
                  <td><%= key.ID%></td>
                  <td><%= df%></td>
                  <td><%= key.Title%></td>
                  <td><%= key.FirstName%></td>
                  <td><%= key.LastName%></td>
                  <td><%= key.Gentle%></td>
                  <td><%= key.PhoneNumber%></td>
                  <td><%= key.Email%></td>
                  <td><%= key.Username%></td>
                  <td><%= key.Password%></td>
              </tr>
          <% } %>
        <% } %>
      </table>
</body>
<grammarly-desktop-integration data-grammarly-shadow-root="true"></grammarly-desktop-integration>

</html>